<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Empty">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0dp</item>
    </style>

    <style name="Wrap">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="UserDetailsHeader" parent="Wrap">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
    </style>

    <style name="UserDetailsValue" parent="Wrap">
        <item name="android:layout_marginStart">@dimen/margin_default</item>
        <item name="android:layout_marginTop">@dimen/margin_default</item>
    </style>

    <style name="HorizontalGuideline">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="VerticalGuideline">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="BagdeIcon" parent="Wrap">
        <item name="android:layout_marginTop">@dimen/margin_default</item>
    </style>

    <style name="UserDetailsReputation" parent="Wrap">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:background">@drawable/reputation_background</item>
    </style>

</resources>
